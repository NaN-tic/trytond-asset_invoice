<tryton>
    <data depends="sale">
        <record model="ir.ui.view" id="sale_view_form">
            <field name="model">sale.sale</field>
            <field name="inherit" ref="sale.sale_view_form"/>
            <field name="name">sale_form</field>
        </record>
        <record model="ir.ui.view" id="sale_view_tree">
            <field name="model">sale.sale</field>
            <field name="inherit" ref="sale.sale_view_tree"/>
            <field name="name">sale_list</field>
        </record>

        <!-- asset to sale -->
        <record model="ir.action.act_window" id="act_asset_sale_form2">
            <field name="name">Sales</field>
            <field name="res_model">sale.sale</field>
            <field name="domain"
                eval="[If(Eval('active_ids', []) == [Eval('active_id')], ('asset', '=', Eval('active_id')), ('asset', 'in', Eval('active_ids')))]"
                pyson="1"/>
        </record>
        <record model="ir.action.keyword" id="act_open_asset_sale_keyword1">
            <field name="keyword">form_relate</field>
            <field name="model">asset,-1</field>
            <field name="action" ref="act_asset_sale_form2"/>
        </record>
        <record model="ir.action-res.group" id="act_sale_form2-group_sale">
            <field name="action" ref="act_asset_sale_form2"/>
            <field name="group" ref="sale.group_sale"/>
        </record>
    </data>
</tryton>
